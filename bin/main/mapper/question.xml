<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.tenco.tencoshop.repository.interfaces.QuestionRepository">
	<select id="readQuestion"
		resultType="com.tenco.tencoshop.repository.model.Question">
		select * from question_tb;
	</select>

	<select id="searchQuestion"
		resultType="com.tenco.tencoshop.repository.model.Question">
		select * from question_tb
		where content like #{findWord}
		or
		title like #{findWord};
	</select>

</mapper>